<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users-List</title>
    <link rel="stylesheet" type="text/css" href="/css/admin-user_list.css" />
</head>

<body>
    <!-- users-list -->
    <div class="title">
        <div id="id">아이디</div>
        <div id="nickname">닉네임</div>
        <div id="email">이메일</div>
    </div><br><br>
    <hr>
    <% for(var i=0; i<data.length; i++) { %>
        <div id="number">
            <%= i+1 %>
        </div>
        <div id="id">
            <%= data[i].id %>
        </div>
        <div id="nickname">
            <%= data[i].name %>
        </div>
        <div id="email">
            <%= data[i].email %>
        </div>
        <form action="/admin_user_update" method="post">
            <input type="hidden" value="<%= data[i].id %>" name="id">
            <button type="submit">수정</button>
        </form>
        <br><br>
        <hr>
    <% } %>
    <div>
        <form action="/logout" method="post"><button type="submit">로그아웃</button></form>
    </div>
    <div>
        <form action="/" method="get"><button type="submit">홈으로</button></form>
    </div>
</body>

</html>